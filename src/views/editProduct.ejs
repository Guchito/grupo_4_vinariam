<%- include ('./partials/head', {title: 'Carga de productos'}) %>

<body>

    <%- include ('./partials/header') %>

    <h1 class="tituloCarga">Carga de productos</h1>
    <div class="contenedorCarga">
        <div class="navAdmin">
            <div class="usuarioAdmin">
                <img class="avatar" src="/img/avatar1.svg" alt="Avatar">
                <div class="nombreAdmin">
                    <h3>Violeta Aguirre</h3>
                    <a href="#">Ver mi perfil</a>
                </div>
            </div>
            <a class="navAdminElemnto" href="#">Proveedores</a>
            <a class="navAdminElemnto selectedAdminNav" href="#">Editar producto</a>
            <a class="navAdminElemnto" href="#">Pedidos</a>
            <a class="navAdminElemnto" href="#">Configuración</a>
            <a class="navAdminElemnto" href="#">Mensajes</a>
            <a class="navAdminElemnto" href="#">Métricas</a>
        </div>
        <div class="selectorCategoria">
            <h3>/tipo de producto</h3>
            <a href="/admin/carga">
                <img src="/img/cargaVino.svg" alt="Carga de vinos">
            </a>
            <a href="/admin/carga">
                <img src="/img/cargaConservas.svg" alt="Carga de conservas">
            </a>
            <a href="/admin/carga">
                <img src="/img/cargaExp.svg" alt="Carga de experiencias">
            </a>
            <a href="/admin/carga">
                <img src="/img/cargaBoxes.svg" alt="Carga de boxes">
            </a>
        </div>
        <div>
            <form class="carga" action="/admin/editProduct" method="POST" enctype="multipart/form-data">
                <div class="cargaCampos">
                    <input class="sinborde" type="text" id="name" name="name" value="<%= productEdit.name %>">
                </div>
                <div class="cargaCampos">
                    <input class="sinborde" type="text" id="price" name="price" value="<%= productEdit.price %> " >
                </div>
                <div class="cargaCampos">
                    <label for="class" class="form-label"></label>
                    <select class="sinborde" name="class" id="class" >
                        <option value="" disabled = "true">/ variedad</option>
                        <option value="no-destacado">No destacado</option>
                        <option value="destacado">Destacado</option>                        
                    </select>
                </div>
                <div class="cargaCampos">
                    <label for="subCategory" class="form-label"></label>
                    <select class="sinborde" name="subCategory" id="subCategory" value="<%= productEdit.subCategory %> ">
                        <option value="" disabled>/ variedad</option>
                        <option value="Malbec">Malbec</option>                        
                        <option value="Cabernet">Cabernet Sauvignon</option>
                        <option value="Blend">Blend</option>
                        <option value="Blanco">Blanco</option>
                        <option value="Rosado">Rosado</option>
                    </select>
                </div>
                <div class="cargaCampos">
                    <input class="sinborde" type="text" id="presentation" name="presentation" value="<%= productEdit.presentation %> " >
                </div>
                <div class="cargaCampos">
                    <label for="image" class="form-label"></label>
					<input type="file" name="image" id="image">
                </div>

                <div class="cargaCampos">
                    <textarea class="sinborde" name="description" id="description"  placeholder="/descipción"><%= productEdit.description %> </textarea>
                </div>
                <div class="contenedorEditar">
                    <div class="Guardar">
                        <button class="botonGuardar" type="submit">Editar producto</button>
                    </div>

                </div>
            </form>
            <form class="Guardar" method="POST" action="/admin/editar/<%=productEdit.id %> ?_method=DELETE" enctype="multipart/form-data">
                <button type="submit" class="botonEliminar">Eliminar producto</button> 
            </form>
        </div>
    </div>


</body>
</html>