<%- include ('../partials/head', {title: 'Profile'}) %>

<body>
<div class="center">
        <%- include ('../partials/header') %>

        <main>


        <div class="BloqueGeneralAdmin">

            <div class="bloqueUno">
                <div class="bloqueUnoTitulo">
                    <h1>Tu perfil</h1>
                    <a href="/users/logout">Logout</a>
                </div>
                <div>
                <img class="hombreProfile" src="/img/profile.svg" alt="genteRegister">
            </div>
                  
            </div>


            <div class="bloqueDos">
                <div class="textoBloqueDos">
                    <h2 class="datosPerfil">Tus datos</h2>
                    <div class="userPhoto">
                        <img class="avatarProfile" src="/img/users/<%=user.avatar%>" alt="foto">
                    </div>
                    <p class="datosPersonales">
                        <br><%= user.name + ' ' + user.last_name%></br>
                        <br><%= user.email%> </br>
                        <br><%= user.dob%> </br>
                    </p>
                    <a href = '/users/edit'>
                        <button class="camposForm">Editar</button>
                    </a>

                    <h2 class="datosPerfil">Facturación</h2>
                </div>

                <div class="fotoTarjeta">
                    <img class="fotoTarjeta" src="/img/tarjeta.svg" alt="tarjeta">
                </div>
            </div>

            
            <div class="bloqueTres">
                <div class="textoBloqueTres">
                <h2 class="datosPerfil">Tus compras</h2>
                <p class="datosPersonales">
                    <br>Pedidos en curso (1)</br>
                    <br>Pedidos terminados</br>
                    <br>Cancelados</br>
                </p>
                <h2 class="datosPerfil">Reservas activas</h2>
                <p class="datosPersonales">
                    <br>Degustación Bodega López</br>
                    <br>Fecha: 04-07-2021</br>
                    <br>Thames 989</br>
                </p>
                </div>
            </div>
            
        </div>
        </main>
    </div>
    <%- include ('../partials/footer') %>

</body>
</html>