<%- include ('../partials/head', {title: 'Profile'}) %>

<body>
    <div class="center">
        <%- include ('../partials/header') %>

        <main>


        <div class="BloqueGeneralAdmin">

            <div class="bloqueUno">
                <div class="bloqueUnoTitulo">
                    <a href="/users/profile"><h1>Tu perfil</h1></a> 
                    <a href="/users/logout">Logout</a>
                </div>
                <div>
                <img class="hombreProfile" src="/img/password.png" alt="imagenPassword">
            </div>
                  
            </div>

            <div class="formRegister">
                <form action="/users/password" method="POST">
                    <h2 class="contanos">Cambia tu contraseña</h2>
                    <ul style= "color: red" class="errors"></ul>
                    <% if (typeof errors != "undefined") { %>
                        <% errors.forEach(error => { %>
                           <p><%= error.msg %> </p>
                        <% }) %>
                    <% } %>
                    <input class="camposForm" type="password" id="newPassword" name="newPassword" placeholder="Nueva contraseña"><br>
                    <input class="camposForm" type="password" id="newPasswordConfirm" name="newPasswordConfirm" placeholder="Confirmá tu nueva contraseña"><br>
                    <input class="camposForm" type="password" id="oldPassword" name="oldPassword" placeholder="Contraseña"><br>
                <div class="botones">
                    <button class="boton camposForm" type="submit" name="register" id="register"><strong>Continuar</strong></button>
                </div>
            </form>
       
        </div>
        </main>
    </div>
    <%- include ('../partials/footer') %>
    <script src="/js/scriptEditUser.js"></script>

</body>
</html>