<%- include ('../partials/head', {title: 'Productos'}) %>
    <body>
        <div class="center">
            <%- include ('../partials/header') %>
        </div>
        <main>
            <h1 class="tituloListado">Vinos</h1>
            <div class="contenedorListado">
                <div class="listadoIzquierda">
                    <div class="filtros">

                        <div class="filtrarPor">
                            <label> Filtrar:</label>
                            <select class="filtrosEstilo">
                                <option class="categoryFilter" value="0">Todos</option>
                                <% for(category of categories) { %>
                                    <option class="categoryFilter" value=<%= category.id %>><%= category.name%></option>
                                <%}%>
                            </select>
                        </div>

                        <div class="filtrarPor">
                            <label>Ordenar:</label>
                            <select class="filtrosEstilo">
                                <option value="may">Mayor precio</option>
                                <option value="men">Menor precio</option>
                            </select>
                        </div>

                    </div>
                    <div class= "mujerComprando">
                        <img src="/img/mujerComprando.svg" alt="mujerComprando">
                    </div>
                </div>
                <div class="conteinerProducts">
                    <div id="filtered"></div>
                    <% for (const product of products) { %>
                        <article class="articuloListado" data-category="<%= product.categories[0].id%>">
                            <a href="/productos/detail/<%= product.id %>">
                                <div class="productBoxImage">
                                    <img src="/img/<%= product.img %>" alt="producto">
                                </div>
                                <div class="productBoxData">
                                    <div class="nombre-info">
                                        <h4><%=product.name %></h4>
                                        <p class="productDescription"><%= product.detail %></p>
                                    </div>
                                   <div class="agregarAlCarro">
                                        <p>$<%= product.price %></p>
                                        <form action="/cart/addToCart/<%= product.id %> " method="POST">
                                            <input hidden class="cantidad" name="quantity" type="number" min="1" value="1">
                                            <button type="submit" class="agregarYEditar">Agregar <i class="fas fa-shopping-cart"></i></button>
                                        </form>
                                        
                                  </div>
                                </div>
                            </a>
                        </article>
                    <% } %>
                </div>
            </div>

        </main>
        
        <%- include ('../partials/footer') %>
        <script src="/js/script.js"></script>
    </body>
</html>